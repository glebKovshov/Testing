<Window x:Class="PR3._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR3._2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Сумма" HorizontalAlignment="Left" Margin="71,80,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Срок (месяцев)" HorizontalAlignment="Left" Margin="71,143,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Процентная ставка" HorizontalAlignment="Left" Margin="71,213,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox Name="Sum" HorizontalAlignment="Left" Margin="308,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="20"/>
        <TextBox Name ="Term" HorizontalAlignment="Left" Margin="308,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="20"/>
        <TextBox Name ="Rate" HorizontalAlignment="Left" Margin="308,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="20"/>
        <Label Content="Схема начислений %" HorizontalAlignment="Left" Margin="513,80,0,0" VerticalAlignment="Top" FontSize="20"/>
        <RadioButton Name="Simple" Content="Простые проценты" HorizontalAlignment="Left" Margin="525,147,0,0" VerticalAlignment="Top" FontSize="20"/>
        <RadioButton Name="Compound" Content="Сложные проценты" HorizontalAlignment="Left" Margin="525,192,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Name="Result" Content="Доход по вкладу = " HorizontalAlignment="Left" Margin="71,332,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button Name="CalculateButton" Content="Вычислить" HorizontalAlignment="Left" Margin="525,335,0,0" VerticalAlignment="Top" Width="150" FontSize="20" Click="CalculateButton_Click"/>
    </Grid>
</Window>
