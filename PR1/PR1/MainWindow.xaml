<Window x:Class="PR1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR1"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="Практическая работа №1" Height="450" Width="546">
    <Grid>
        <Label Content="X" HorizontalAlignment="Left" Margin="26,0,0,5" VerticalAlignment="Center" FontSize="20"/>
        <Image Margin="26,10,26,250" Source="/задание.bmp" Stretch="Fill"/>
        <TextBox Name="x" HorizontalAlignment="Left" Margin="60,0,0,0" TextWrapping="Wrap"  VerticalAlignment="Center" Width="110" Height="25" FontSize="15"/>
        <Label  Content="i" HorizontalAlignment="Left" Margin="26,237,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox Name ="i" HorizontalAlignment="Left" Margin="60,245,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="110" Height="25" FontSize="15"/>
        <Label Content="Ответ" HorizontalAlignment="Left" Margin="26,375,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox Name="result" HorizontalAlignment="Left" Margin="94,381,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="110" Height="25" IsEnabled="False" FontSize="15"/>
        <RadioButton Name="sh" Content="sh(x)" HorizontalAlignment="Left" Margin="41,279,0,0" VerticalAlignment="Top" FontSize="15"/>
        <RadioButton Name="porabola" Content="x^2" HorizontalAlignment="Left" Margin="41,314,0,0" VerticalAlignment="Top" FontSize="15"/>
        <RadioButton Name="exponent" Content="e^x" HorizontalAlignment="Left" Margin="41,351,0,0" VerticalAlignment="Top" FontSize="15"/>
        <Button Content="Вычислить" HorizontalAlignment="Left" Margin="190,274,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="Execute"/>
        <Button Content="Очистить" HorizontalAlignment="Left" Margin="190,330,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="Clear"/>

    </Grid>
</Window>
