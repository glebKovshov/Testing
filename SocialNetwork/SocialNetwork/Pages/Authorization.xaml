<Page x:Class="SocialNetwork.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SocialNetwork.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization" Background="{StaticResource BackgroundBrush}" 
      KeyDown="Window_KeyDown">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Авторизация"
               HorizontalAlignment="Center" VerticalAlignment="Bottom"
               Style="{StaticResource TitleText}"/>

        <TextBox Name="Login" Grid.Row="1" Width="200" Height="25" />

        <PasswordBox Name="Password" Grid.Row="2" Width="200" Height="25" />

        <Button Grid.Row="3" Width="150" Height="30"
            Content="Войти" Click="Entry_Click"/>

        <Button Name="Registration" Grid.Row="4"
            Content="Регистрация"
            FontSize="14"
            HorizontalAlignment="Center" VerticalAlignment="Top"
            Click="Registration_Click"/>
    </Grid>

</Page>
