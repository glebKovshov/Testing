<Page x:Class="SocialNetwork.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SocialNetwork.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main" Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Главная страница" Grid.ColumnSpan="5"
               Grid.Column="0" Grid.Row="0"
               VerticalAlignment="Center" HorizontalAlignment="Center"
               FontSize="25" Style="{StaticResource TitleText}"/>
        <Button Name="Friends" 
                Grid.Column="0" Grid.Row="1" 
                Height="50" Margin="10, 0, 10, 0" 
                Content="Friends" FontSize="20" Click="Friends_Click"/>
        <Button Name="Users" 
                Grid.Column="1" Grid.Row="1" 
                Height="50" Margin="10, 0, 10, 0" 
                Content="Users" FontSize="20" Click="Users_Click"/>
        <Button Name="Posts" 
            Grid.Column="2" Grid.Row="1" 
            Height="50" Margin="10, 0, 10, 0" 
            Content="Posts" FontSize="20" Click="Posts_Click"/>
        <Button Name="Comments" 
            Grid.Column="3" Grid.Row="1" 
            Height="50" Margin="10, 0, 10, 0" 
            Content="Comments" FontSize="20" Click="Comments_Click"/>
        <Button Name="Messages" 
            Grid.Column="4" Grid.Row="1" 
            Height="50" Margin="10, 0, 10, 0" 
            Content="Messages" FontSize="20" Click="Messages_Click"/>
    </Grid>
</Page>
